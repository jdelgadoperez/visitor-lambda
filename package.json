{
    "name": "visitor-lambda",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "prebuild": "npm install",
        "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --external:aws-sdk --external:@aws-sdk/* --external:@nestjs/websockets --external:@nestjs/microservices --format=cjs",
        "clean": "rm -rf node_modules",
        "test": "echo \"Error: no test specified\" && exit 1",
        "test:local": "node test-local.js",
        "prepackage": "npm run build && npm run clean && npm install --production && cp dist/index.js index.js",
        "package": "zip -r ../visitor-lambda.zip index.js node_modules dist-api",
        "postpackage": "rm index.js && npm run build",
        "deploy:update": "npm run package && aws lambda update-function-code --function-name visitor-lambda --zip-file fileb://visitor-lambda.zip",
        "deploy:create": "npm run package && aws lambda create-function --function-name visitor-lambda --runtime nodejs18.x --role arn:aws:iam::$(aws sts get-caller-identity --query Account --output text):role/lambda-execution-role --handler index.handler --zip-file fileb://visitor-lambda.zip"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@nestjs/common": "^11.1.3",
        "@nestjs/core": "^11.1.3",
        "@nestjs/platform-express": "^11.1.3",
        "@vendia/serverless-express": "^4.12.6",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "ioredis": "^5.6.1",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.7",
        "@nestjs/schematics": "^11.0.5",
        "@nestjs/testing": "^11.1.3",
        "@types/aws-lambda": "^8.10.149",
        "@types/express": "^5.0.3",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.15.32",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.34.1",
        "@typescript-eslint/parser": "^8.34.1",
        "@typescript-eslint/rule-tester": "^8.34.1",
        "@typescript-eslint/type-utils": "^8.34.1",
        "esbuild": "^0.25.5",
        "eslint": "^9.29.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-local-rules": "^3.0.2",
        "eslint-plugin-prettier": "^5.5.0",
        "jest": "^29.7.0",
        "prettier": "^3.5.3",
        "serverless-offline": "^14.4.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.1.1",
        "ts-jest": "^29.4.0",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3"
    }
}
